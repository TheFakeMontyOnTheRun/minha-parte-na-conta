<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartNewBarAccount" 
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/fundo_parteconta" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <Spinner
        android:id="@+id/spnConsumingPerson"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spnBougtProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#77ffffff"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <CheckBox
            android:id="@+id/chkBought"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Consumiu" />

        <TextView
            android:id="@+id/tvFlatTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="R$ 0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="R$ 0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/tvSharedWith"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Daniel Monteiro"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFinalCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Resumo final" />

</LinearLayout>
</ScrollView>
</RelativeLayout>